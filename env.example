# infinidom Framework Environment Variables
# Copy this file to .env and fill in your values

# AI Configuration
AI_PROVIDER=openai  # "openai" or "cerebras"
AI_API_KEY=your-api-key-here
AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=16384

# Content Mode: "restrictive" or "expansive"
# - "restrictive": AI strictly follows provided content, no invented content
# - "expansive": AI generates rich, explorable content based on your content
CONTENT_MODE=expansive

# Session Persistence
# If true, session survives browser refresh (pages cached, conversation maintained)
# Default true for production experience
PERSIST_SESSION=true

# Application Configuration
APP_NAME=infinidom Framework
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Session Configuration
SESSION_TTL_SECONDS=3600
MAX_SESSION_HISTORY=20

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*
